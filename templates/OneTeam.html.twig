{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col">

        </div>
        <div class="col-6" style="margin-top: 150px">
            <div>
                <h2 class="display-4" >{{ team.name }}</h2>
                <p >{{ team.year }}</p>
                <p >{{ team.stadium }}</p>
                <p >{{ team.numberOfTitles }}</p>
            </div>
            <table class="table table-hover" id="example" >
                <thead>
                <tr>
                    <th >Player</th>
                    <th >Position</th>
                    <th >Nationality</th>
                </tr>
                </thead>
                <tbody>
                {% for player in team.players %}
                    <tr>
                        <td>{{ player.name }}</td>
                        <td>{{ player.role }}</td>
                        <td>{{ player.nationality }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col">

        </div>
    </div>

{% endblock %}

